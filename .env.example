# --- Model Paths (as in config.py) ---
EMBEDDING_MODEL_PATH="Qwen/Qwen3-Embedding-0.6B"
RERANKER_MODEL_PATH="Qwen/Qwen3-Reranker-0.6B"

# --- LLM Provider Configuration (as in config.py) ---
CHAT_MODEL_PROVIDER="gemini"
CHAT_MODEL_NAME="gemini-2.5-flash-preview-05-20"
SYSTEM_PROMPT="You are H.E.R., your primary objective is to meticulously understand and strictly adhere to every instruction I provide. Pay close attention to all details I give, ensuring your response perfectly aligns with my requirements. Prioritize my specific directives, even if it means overriding your typical response patterns or general knowledge."
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY_HERE" # Replace with your actual key in .env

SUMMARY_MODEL_PROVIDER="volcangine"
SUMMARY_MODEL_NAME="deepseek-v3-250324"
VOLCANGINE_ARK_API_KEY="YOUR_VOLCANGINE_ARK_API_KEY_HERE" # Replace with your actual key in .env

# --- LLM Retry Configuration (as in config.py) ---
LLM_RETRY_ATTEMPTS=10
LLM_INITIAL_RETRY_DELAY=1.0

# --- Proxy (as in config.py) ---
HTTP_PROXY="" # Example: "http://127.0.0.1:7888" or "socks5://127.0.0.1:1080"

# --- Search & RAG Configuration (as in config.py) ---
ARCHIVE_RECALL_TOP_K=5
CHUNK_RECALL_TOP_K=20
RERANK_TOP_K=5

# --- Text Splitting (as in config.py) ---
CHUNK_SIZE=512
# SIMILARITY_THRESHOLD from config.py is 0.75. chat_service.py also defines a local one. Consider centralizing.
SIMILARITY_THRESHOLD=0.75

# PostgreSQL Configuration
POSTGRES_USER=her_user
POSTGRES_PASSWORD=her_secret_password
POSTGRES_DB=her_memory_db
POSTGRES_PORT=5432

# Qdrant Configuration
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_HOST=localhost # 主应用连接Qdrant时使用的主机名